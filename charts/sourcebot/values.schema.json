{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sourcebot Helm Chart Values Schema",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "security": {
          "type": "object",
          "properties": {
            "allowInsecureImages": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "sourcebot": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "type": "string"
            },
            "digest": {
              "type": "string"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            },
            "pullSecrets": {
              "type": "array"
            }
          }
        },
        "command": {
          "type": "array"
        },
        "args": {
          "type": "array"
        },
        "license": {
          "type": "object"
        },
        "envSecrets": {
          "type": "array"
        },
        "additionalEnv": {
          "type": "array"
        },
        "config": {
          "type": "object"
        },
        "serviceAccount": {
          "type": "object"
        },
        "podSecurityContext": {
          "type": "object"
        },
        "containerSecurityContext": {
          "type": "object"
        },
        "service": {
          "type": "object"
        },
        "additionalPorts": {
          "type": "array"
        },
        "ingress": {
          "type": "object"
        },
        "initContainers": {
          "type": "array"
        },
        "resources": {
          "type": "object"
        },
        "livenessProbe": {
          "type": "object"
        },
        "readinessProbe": {
          "type": "object"
        },
        "startupProbe": {
          "type": "object"
        },
        "extraVolumes": {
          "type": "array"
        },
        "extraVolumeMounts": {
          "type": "array"
        },
        "podDisruptionBudget": {
          "type": "object"
        },
        "podAnnotations": {
          "type": "object"
        },
        "additionalLabels": {
          "type": "object"
        },
        "nodeSelector": {
          "type": "object"
        },
        "tolerations": {
          "type": "array"
        },
        "affinity": {
          "type": "object"
        },
        "priorityClassName": {
          "type": "string"
        },
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "existingClaim": {
              "type": "string"
            },
            "size": {
              "type": "string"
            },
            "storageClass": {
              "type": "string"
            },
            "accessModes": {
              "type": "array"
            },
            "annotations": {
              "type": "object"
            }
          }
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "deploy": {
          "type": "boolean"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "auth": {
          "type": "object"
        },
        "image": {
          "type": "object"
        },
        "primary": {
          "type": "object"
        }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "deploy": {
          "type": "boolean"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "auth": {
          "type": "object"
        },
        "image": {
          "type": "object"
        }
      }
    }
  }
}
